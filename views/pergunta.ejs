<%- include('partials/head') %> 
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <h1 class="mt-3 pt-2 border-top"> <%= pergunta.titulo %>  </h1>
        <p class="border-bottom pb-2"> <%= pergunta.descricao %>  </p>

        <div class="card">
        <form action="/responder" method="post">
            <h5 class="p-3">Responda</h5>
            <div class="card-body">
                <textarea name="corpo" class="form-control" placeholder="Digite sua resposta"></textarea>
                <input name="perguntaId" type="hidden" value="<%= pergunta.id %> ">
            </div>
            <div class="card-footer">
                <input type="submit" class="btn btn-primary mt-2" value="Responder"/>
            </div>
        </form>
    </div>
    </div>
    <%- include('partials/footer') %>
</body>
</html>
